version: '3.8'

services:
  backend:
    container_name: projectdpr_backend
    build: ./backend
    ports:
      - "5000:5000"
    env_file:
      - .env
      
    depends_on:
      - db
    networks:
      - projectdpr_network
    volumes:
      - ./backend:/app
      - /app/node_modules

  db:
    container_name: projectdpr_db
    image: postgres:17.4-alpine3.21
    restart: always
    
    env_file:
      - .env

    environment:
      POSTGRES_USER: ${DB_USER}
      POSTGRES_PASSWORD: ${DB_PASSWORD}
      POSTGRES_DB: ${DB_NAME}
    ports:
      - "5455:5432"

    networks:
      - projectdpr_network
    volumes:
      - projectdpr_postgres_data:/var/lib/postgresql/data

  frontend:
    container_name: projectdpr_frontend
    build: ./frontend
    ports:
      - "3001:80"
    depends_on:
      - backend
    networks:
      - projectdpr_network

volumes:
  projectdpr_postgres_data:

networks:
  projectdpr_network:
    driver: bridge
